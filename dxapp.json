{
  "name": "eggd_vcf_qc",
  "title": "eggd_vcf_qc",
  "summary": "Simple QC of a vcf file. Includes deviation from expected allelic balance",
  "tags":["NGS QC"],
  "dxapi": "1.0.0",
  "inputSpec": [
    {
      "name": "vcf_file",
      "label": "Input VCF file",
      "help": "A VCF file containing variants to be evaluated",
      "class": "file",
      "optional": false,
      "patterns": ["*.vcf","*.vcf.gz"]
    },
    {
      "name": "bed_file",
      "label": "Input bed file",
      "help": "A bed file containing the regions to be evaluated in the vcf file",
      "class": "file",
      "optional": false,
      "patterns": ["*.bed"]
    }
  ],
  "outputSpec": [
    {
      "name": "output_file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": "A tab delimited vcf.QC file"
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 1
      }
    },
    "interpreter": "python",
    "release": "20.04",
    "distribution": "Ubuntu",
    "file": "src/eggd_vcf_qc.py",
    "assetDepends": [
      {
        "name": "bedtools",
        "project": "project-Fkb6Gkj433GVVvj73J7x8KbV",
        "folder": "/app_assets/bedtools/bedtools_v2.30.0/",
        "version": "2.30.0"
      }
    ]
  },
  "access": {
    "project": "CONTRIBUTE",
    "allProjects": "VIEW"
  },
  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    }
  }
}
